<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#72cc88">

    <!-- Illustration and shapes background -->

    <!-- Card-like white background -->
    <ImageView
        android:id="@+id/imageChinch"
        android:layout_width="341dp"
        android:layout_height="387dp"
        android:layout_marginTop="80dp"
        android:contentDescription="Cute chinchilla with money"
        android:src="@drawable/chinch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/bottomCard"
        android:layout_width="415dp"
        android:layout_height="212dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:clipToOutline="true"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageChinch"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save More and Get Rewards"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="The more you save, the more you earn! Unlock exclusive discounts and rewards just by sticking to your budget."
            android:textColor="@android:color/darker_gray" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="327dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_button_bg"
            android:text="Next"
            android:textColor="@android:color/white"
            android:backgroundTint="#48B381"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>